<!-- SHIFT + 1/2-->
    <!--left deck - loop shift back--><control channel="1" event_type="Note On" control="16">
        <userio event="click">
            <shift_loop deck_set="Default" deck_id="0" slot_id="0">
                <translation action_on="press" behaviour="explicit"/>
            </shift_loop>
        </userio>
        <userio event="output">
            <shift_loop deck_set="Default" deck_id="0" slot_id="0">
                <translation action_on="any">
                    <alias name="on" value="127"/>
                    <alias name="off" value="0"/>
                </translation>
            </shift_loop>
        </userio>
    </control><!--end left deck - loop shift back-->

<!-- SHIFT + 2x -->
    <!--left deck - loop shift forward--><control channel="1" event_type="Note On" control="17">
        <userio event="click">
            <shift_loop deck_set="Default" deck_id="0" slot_id="1">
                <translation action_on="press" behaviour="explicit"/>
            </shift_loop>
        </userio>
        <userio event="output">
            <shift_loop deck_set="Default" deck_id="0" slot_id="1">
                <translation action_on="any">
                    <alias name="on" value="127"/>
                    <alias name="off" value="0"/>
                </translation>
            </shift_loop>
        </userio>
    </control><!--end left deck - loop shift forward-->

<!-- SHIFT + 1/2 -->
    <!--right deck - loop shift back--><control channel="2" event_type="Note On" control="16">
        <userio event="click">
            <shift_loop deck_set="Default" deck_id="1" slot_id="0">
                <translation action_on="press" behaviour="explicit"/>
            </shift_loop>
        </userio>
        <userio event="output">
            <shift_loop deck_set="Default" deck_id="1" slot_id="0">
                <translation action_on="any">
                    <alias name="on" value="127"/>
                    <alias name="off" value="0"/>
                </translation>
            </shift_loop>
        </userio>
    </control><!--end right deck - loop shift back-->
<!-- SHIFT + 2x -->
    <!--right deck - loop shift forward--><control channel="2" event_type="Note On" control="17">
        <userio event="click">
            <shift_loop deck_set="Default" deck_id="1" slot_id="1">
                <translation action_on="press" behaviour="explicit"/>
            </shift_loop>
        </userio>
        <userio event="output">
            <shift_loop deck_set="Default" deck_id="1" slot_id="1">
                <translation action_on="any">
                    <alias name="on" value="127"/>
                    <alias name="off" value="0"/>
                </translation>
            </shift_loop>
        </userio>
    </control><!--end right deck - loop shift forward-->
</midi>
